@model JobFlow.Domain.Entities.Job

@{
    ViewData["Title"] = "Job Details";
}

<h1>Job Details</h1>

<dl class="row">
    <dt class="col-sm-3">Company</dt>
    <dd class="col-sm-9">@Model.CompanyName</dd>

    <dt class="col-sm-3">Position</dt>
    <dd class="col-sm-9">@Model.Position</dd>

    <dt class="col-sm-3">Job Description</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrWhiteSpace(Model.JobDescription))
        {
            <pre>@Model.JobDescription</pre>
        }
        else
        {
            <span>-</span>
        }
    </dd>


    <dt class="col-sm-3">LinkedIn</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrWhiteSpace(Model.LinkedInUrl))
        {
            <a href="@Model.LinkedInUrl" target="_blank">@Model.LinkedInUrl</a>
        }
        else
        {
            <span>-</span>
        }
    </dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Location</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Compatibility</dt>
    <dd class="col-sm-9">@Model.Compatibility (@Model.CompatibilityReason)</dd>

    <dt class="col-sm-3">Job Docs</dt>
    <dd class="col-sm-9">@Model.JobRelatedDocs</dd>

    <dt class="col-sm-3">Last Interaction</dt>
    <dd class="col-sm-9">
        @(Model.LastInteractionDate?.ToLocalTime().ToString("yyyy-MM-dd") ?? "-")
        @if (!string.IsNullOrWhiteSpace(Model.LastInteractionNote))
        {
            <div>@Model.LastInteractionNote</div>
        }
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
