@model JobFlow.Domain.Entities.Job

@{
    ViewData["Title"] = "Edit Job";
}

<h1>Edit Job</h1>

<form asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label"></label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="JobDescription" class="form-label"></label>
        <textarea asp-for="JobDescription" class="form-control" rows="6"
                  placeholder="Paste the job description here to help with compatibility scoring"></textarea>
        <span asp-validation-for="JobDescription" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LinkedInUrl" class="form-label"></label>
        <input asp-for="LinkedInUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="WayOfApplication" class="form-label"></label>
        <input asp-for="WayOfApplication" class="form-control" placeholder="Easy Apply / Company Site / Recruiter" />
    </div>

    <div class="mb-3">
        <label asp-for="Website" class="form-label"></label>
        <input asp-for="Website" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" placeholder="Full-time / Internship / Contract" />
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Contact" class="form-label"></label>
        <input asp-for="Contact" class="form-control" placeholder="Name / Email / LinkedIn profile" />
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select"
                asp-items="Html.GetEnumSelectList<JobFlow.Domain.Entities.JobStatus>()">
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Compatibility" class="form-label"></label>
        <select asp-for="Compatibility" class="form-select"
                asp-items="Html.GetEnumSelectList<JobFlow.Domain.Entities.JobCompatibility>()">
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CompatibilityReason" class="form-label"></label>
        <textarea asp-for="CompatibilityReason" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="JobRelatedDocs" class="form-label"></label>
        <input asp-for="JobRelatedDocs" class="form-control" placeholder="e.g., JuniorDotNetResume.pdf; CoverLetter.pdf" />
    </div>

    <div class="mb-3">
        <label asp-for="LastInteractionDate" class="form-label"></label>
        <input asp-for="LastInteractionDate" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="LastInteractionNote" class="form-label"></label>
        <textarea asp-for="LastInteractionNote" class="form-control" rows="2"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
